<% include partials/header1 %>

<title>Dons</title>
<link rel="icon" href="image/yk.PNG" />
<% include partials/header2 %>



		
		
<div class="wraper-payment"style="padding-top:50px;"> 

		<% if(currentUser){ %>
	
			<form action="/payments/new " method="GET">
						<button class="go-button" style=" margin-top:70px"> Creer une carte</button>
					</form>
	
		<% } %>

	<% payments.reverse().forEach(function(payment){ %>

			<div class="payment-container" style="margin-top:20px; margin-bottom:20px;">
			
				<div class="payment-image"> </div>
				<div class="payment-text">

					<h3> <%=payment.title %> </h3>
				

					<div class="paragraph"> <%-payment.content%> </div>


					<a href="https://www.paypal.com/paypalme2/Yasmiekally"> <%=payment.button%> </a>

				 </div>
				 
				<% if(currentUser){ %>
				 
				 
				<form action="/payments/<%=payment._id%>?_method=DELETE" method="POST"> 
				<button> Suprimer</button>
				</form>
				
				<form action="/payments/<%=payment._id%>/edit" method="GET"> 
				<button> Modifier</button>
				</form>
				
				 
				 <% } %>
				 
			

		</div>
		
		<%	}) %>

		
	</div>
	

<% include partials/footer %>