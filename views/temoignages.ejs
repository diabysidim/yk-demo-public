<% include partials/header1 %>

<title>Temoignages</title>
<link rel="icon" href="image/yk.PNG" />
<% include partials/header2 %>


<div class="container1"> 
    
    				
	
	
    			
       
      

    <div class="temoignage-container" > 
       

        <% temoignages.reverse().forEach(function(temoignage){ %>

            <div class="temoignage"> 
        
                <h3> <%=temoignage.name%>  <i class="<%=temoignage.gender%>" style= "<% if(temoignage.gender==='fas fa-mars'){ %> color: blue;  <% } else { %> color: pink; <% } %> " ></i> </h3> 
        
                    <% if(temoignage.content){ %>
                    
               <div class="preview"> <div class="trix-content">  <%-temoignage.content %>   </div> </div>
               
                    <% } %>
                 
                <a href="/temoignages/<%=temoignage._id%>"> en savoir plus </a>
                
             </div>
            
          <%	}) %>
            
            
    </div>
    <% if(currentUser){ %>
	
			<form action="/temoignages/new " method="GET" style="margin:20px auto;">
						<button class="go-button"> Creer un temoignage</button>
					</form>

  	<% } %>

</div>
    
   	

    



<% include partials/footer%>